<image class="png" mode="widthFix" src="/images/signup.png" style="width: 100%; height: 207.407px;"></image>
<view class="page text-center margin-top">
  <form bindsubmit='goSignUp' class="table">
      <input type='text' class='userBox bg-cyan padding radius text-center light' name='username' placeholder="昵称"></input>
      <input type="password" class='pwdBox bg-cyan padding radius text-center light' name='pwd' placeholder="密码"></input>
      <input type="text" class="mailBox bg-cyan padding radius text-center light" name='mail' placeholder="邮箱"></input>
      <input type="text" class="mailBox bg-cyan padding radius text-center light" name='signCode' placeholder="邀请码"></input>
      <button class='login cu-btn bg-red margin-tb-sm lg' form-type='submit'>注册</button>
  </form>
</view>